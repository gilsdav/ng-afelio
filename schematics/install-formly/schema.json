{
    "$schema": "http://json-schema.org/schema",
    "$id": "SchematicsNgAfelioFormlylibrairy",
    "title": "ng-afelio Generate Formly components librairy",
    "type": "object",
    "properties": {
        "project": {
            "type": "string",
            "description": "The name of the project",
            "$default": {
              "$source": "projectName"
            }
        },
        "appModule": {
            "type": "string",
            "description": "The path of the AppModule (relativePath from project folder)",
            "default": "app.module.ts"
        },
        "prefix": {
            "type": "string",
            "description": "lib prefix",
            "default": "formly"
        }
    },
    "required": []
}